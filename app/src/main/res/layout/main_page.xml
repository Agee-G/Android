<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#fde857">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="鬼畜圈"
                android:textSize="22sp"
                android:textColor="#000"
                >

            </TextView>
        </RelativeLayout>

   <android.support.v4.view.ViewPager
       android:id="@+id/id_viewpager"
       android:layout_width="match_parent"
       android:layout_height="200dp">
   </android.support.v4.view.ViewPager>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_weight="1"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#fff"

                        android:gravity="center">
                        <View

                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>

                        <Button

                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="-200dp"
                            android:background="#fff"
                            android:text="热门视频"
                            android:textSize="20dp"
                            >
                        </Button>

                        <ImageView

                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:src="@drawable/xu"

                            />
                        <Button
                            android:id="@+id/bt_more1"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="10sp"
                            android:text="更多"
                            android:background="#fff"
                            />

                    </RelativeLayout>
                    <View
                        android:layout_marginTop="47dp"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#000"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="310dp"
                        android:background="#fff"
                        android:layout_marginTop="50dp"
                        >
                        <ImageView
                            android:id="@+id/first_mainvideo1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/main_one"
                            />
                        <ImageView
                            android:id="@+id/first_mainvideo2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/main_two"
                            />
                        <ImageView
                        android:id="@+id/third_mainvideo3"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="155dp"

                        android:src="@drawable/main_vide3"
                        />
                        <ImageView
                            android:id="@+id/fouth_mainvideo4"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="130dp"
                            android:src="@drawable/main_video4"
                            />



                    </RelativeLayout>




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#fff"
                        android:layout_marginTop="340dp">
                        <View

                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="#000"/>

                        <Button

                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="-200dp"
                            android:background="#fff"
                            android:text="热门广告"
                            android:textSize="20dp"
                            >
                        </Button>

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:background="@drawable/yu"
                            />
                        <Button
                            android:id="@+id/bt_more2"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="10sp"
                            android:text="更多"
                            android:background="#fff"
                            />

                    </RelativeLayout>
                    <View
                        android:layout_marginTop="390dp"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#000"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="310dp"
                        android:background="#fff"
                        android:layout_marginTop="420dp"
                        >
                        <ImageView
                            android:id="@+id/main_adver1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/main_third"
                            />

                        <ImageView
                            android:id="@+id/main_adver2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/main_five"
                        />
                        <ImageView
                            android:id="@+id/main_adver3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="155dp"
                            android:src="@drawable/main_adverthird"
                            />


                    </RelativeLayout>
                </RelativeLayout>



            </LinearLayout>

        </FrameLayout>


    </ScrollView>




</LinearLayout>