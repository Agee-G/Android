<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout

        android:layout_height="match_parent"
        android:layout_width="match_parent"

        android:layout_weight="1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fde857">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="详情"
                android:textSize="22sp"
                android:textColor="#000"
                android:layout_gravity="center"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#fff"
            android:layout_marginTop="46dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/first_image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/advertisefouth"
                />

        </RelativeLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#fff"
            android:layout_marginTop="196dp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"


                android:layout_marginLeft="10dp"
                android:text="商品名称：付小费的护肤品"
                android:textSize="16dp"
                android:textColor="#000"
                />
            <View
                android:layout_marginTop="25dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="制作公司：北京丝芭文化传媒有限公司"
                android:textSize="16dp"

                android:textColor="#000"/>
            <View
                android:layout_marginTop="55dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:text="联系方式：400-617-6598"
                android:textSize="16dp"
                android:textColor="#000"/>
            <View
                android:layout_marginTop="90dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000"/>
              


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#fff"
            android:layout_marginTop="340dp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="需求详情"
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_toRightOf="@+id/third_image3"/>
            <View
                android:layout_marginTop="25dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:text="视频需求：有购买欲望"
                android:textSize="16dp"
                android:textColor="#000"
                android:layout_toRightOf="@+id/third_image3"/>
            <View
                android:layout_marginTop="54dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                android:text="植入需求：弹幕插入或片头插入，弹幕在00:00时开始插入20秒，片头则在片头插入20秒小视频或图片，视频或图公司提供，若up主可以在片头语音推荐产品，另有酬金"
                android:textSize="16dp"
                android:textColor="#000"
                android:layout_toRightOf="@+id/third_image3"/>


        </RelativeLayout>





    </FrameLayout>


</LinearLayout>